        </div>
      </div>
    </div>
    <!-- NAVBAR END -->

   <div class="mycart">
      <p>My Cart</p>
      <span class="shopMore" id="shopMore"><a href="/product">Shop More ></a>></span>
    </div>


    <div id="productCart">
     <% products.forEach((el)=>{%>
            
          <div class='productdiv'>
            
            <div class="productimg">
              <img class="productimg" src=<%= el.image%> alt="">
            </div>
            <p class="productname"><%= el.name%></p>
            <p id="cart_count">Count: (<%= el.count/1%>)</p>
            
            <p id="proRemove" ><a href="/basket/remove/<%= el._id%>"> Remove</a></p>
            
            <span id="floatAll">
              <h3 class='rs'>Rs. <%=el.price%></h3>
           
           
            </span>  
          </div>
          <%})%>

    </div>
    <div class="right">

   <% 
        TotalMrp = 0;
 
        SubTotal = 0;
        OrderTotal = 0;
     
        products.forEach((el)=>{
          TotalMrp += el.price * el.count/1;
          OrderTotal = TotalMrp+50
        })
   
       ;
      
        %>

      <input
        class="coupon"
        type="text"
        placeholder="Gift card or discount code"
      />
      <button onclick="applyCouponFun()">Apply</button>
      <br />
      <br />
      <br />
      <hr />
      <div class="sub">
        <p>Subtotal</p>
        <p>Rs. <%= TotalMrp%></p>
      </div>
      <div class="shipping">
        <p>Shipping</p>
        <p>Rs. 50</p>
      </div>
      <hr />
      <div class="subtotal">
        <p>Total</p>
        <p>Rs. <%= OrderTotal%></p>
      </div>
      <hr>
      <button id="checkout" onclick="checkout()"><a id="checkout"  href="/address">Checkout</a></button>
    </div>

   <img class="footer" src="https://www.linkpicture.com/q/footer.jpg" alt="">
  </body>
</html>
<script src="/scripts/basket.js"></script>